{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "bb-component-SuperButton",
    "friendlyName": "Super Button",
    "description": "A Button component for Budibase.",
    "icon": "Button",
    "styles": [ "padding", "size", "background", "border" ],
    "settings": [
      {
        "type": "text",
        "key": "text",
        "label": "Text",
        "defaultValue" : "Action"
      },
      {
        "type": "icon",
        "key": "icon",
        "label": "Icon"
      },
      {
        "type": "select",
        "key": "size",
        "label": "Size",
        "options" : [
          { "label": "Small" , "value" : "S" },
          { "label": "Medium" , "value" : "M" },
          { "label": "Large" , "value" : "L" }
        ],
        "defaultValue" : "M"
      },
      {
        "type" : "boolean",
        "key" : "emphasized",
        "label" : "Emphasized"
      },
      {
        "type" : "boolean",
        "key" : "iconOnly",
        "label" : "Icon Only"
      },
      {
        "type" : "boolean",
        "key" : "quiet",
        "label" : "Quiet"
      },
      {
        "type" : "boolean",
        "key" : "selected",
        "label" : "Selected"
      },
      {
        "type" : "boolean",
        "key" : "disabled",
        "label" : "Disabled"
      },
      {
        "type" : "boolean",
        "label" : "Loop Actions",
        "key" : "loopActions"
      },
      {
        "type" : "event",
        "key" : "onClick",
        "label" : "On Click",
        "dependsOn" : { "setting" : "loopActions", "value" : true, "invert": true }
      },
      {
        "section" : true,
        "name" : "Batch Action Execution",
        "dependsOn" : "loopActions",
        "settings" : [
          {
            "type" : "text",
            "key" : "loopSource",
            "label" : "Loop Over",
            "placeholder" : "Expects Array"
          },
          {
            "type" : "event",
            "key" : "onLoopStart",
            "label" : "Before Loop",
            "context": [
              { "key" : "iterations" , "label" : "Iterations" }
            ]
          },
          {
            "type" : "event",
            "key" : "loopEvent",
            "label" : "Loop Actions",
            "context": [
              {
                "key" : "idx",
                "label" : "Index"
              },
              {
                "key" : "value",
                "label" : "Value"
          }]
          },
          {
            "type" : "number",
            "key" : "loopDelay",
            "label" : "Loop Delay",
            "min" : 100,
            "defaultValue" : 750
          },
          {
            "type" : "event",
            "key" : "onLoopEnd",
            "label" : "After Loop"
          }
        ]
      }
    ]
  }
}